<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/index_card_view"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_gravity="center"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    card_view:cardCornerRadius="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/index_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SET index"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/index_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/index_name"
            android:layout_marginTop="10dp"
            android:text="1,541.51"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/index_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/index_price"
            android:layout_marginTop="10dp"
            android:text="22,2222.0 M"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/index_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="(16 Mar 17)"
            android:textSize="9sp" />

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="#A0D468"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ 1.64"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="0.02 %"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>