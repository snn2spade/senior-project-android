<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/index_card_view"
    android:layout_width="match_parent"
    android:layout_height="155dp"
    android:layout_gravity="center"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    card_view:cardCornerRadius="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/index_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SET Index"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/index_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/index_name"
            android:layout_marginTop="5dp"
            android:text="1,541.51"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/index_change_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/index_price"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/index_change_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-6dp"
                android:src="@drawable/ic_arrow_up_white_24dp"
                android:tint="@color/colorTrendUp" />

            <TextView
                android:id="@+id/index_change"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="1.64 (+2.05 %)"
                android:textColor="@color/colorTrendUp"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/index_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/index_change_container"
            android:layout_marginTop="10dp"
            android:text="42,2222.0 MB"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/index_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="(16 Mar 17)"
            android:textSize="9sp" />

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="#A0D468"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+2.05 %"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="15sp" />

        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>